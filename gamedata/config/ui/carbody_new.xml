<?xml version='1.0' encoding="UTF-8"?>
<!-- ОКНО ОБЫСКА ТРУПОВ И ТАЙНИКОВ -->
<window>
	<!-- Состояние предмета -->
	<condition_progess_bar x="1" y="1" width="30" height="5" animated="1" horz="1" min="0" max="100" pos="1">
		<min_color color="inv_condition_min"/>
		<middle_color color="inv_condition_mid"/>
		<max_color color="inv_condition_max"/>
		<background>
			<texture x="0" y="908" width="30" height="5" color="inv_condition_base">ui_inv_shk_itembar</texture>
		</background>
		<progress>
			<texture>ui_inv_shk_itembar</texture>
		</progress>
	</condition_progess_bar>

	<!-- Главное окно -->
	<main x="0" y="0" width="1024" height="768">
		<auto_static>
			<texture>ui_trade_wnd</texture>
		</auto_static>
	</main>

	<top_background/>

	<bottom_background x="825" y="736" width="191" height="27">
		<texture>ui_weight_wnd</texture>
	</bottom_background>

	<!-- Иконка ГГ -->
	<static_icon x="848" y="11" width="165" height="108"/>

	<!-- Иконка НПС -->
	<static_icon x="341" y="11" width="165" height="108"/>

	<!-- Рюкзак ГГ -->
	<our_bag_static x="518" y="130" width="496" height="600" always_show_scroll="1">
		<text x="395" y="611" font="letterica16" color="white_1" complex_mode="1"/>
		<texture/>
	</our_bag_static>

	<!-- Рюкзак НПС/Тайник -->
	<others_bag_static x="11" y="130" width="496" height="600" always_show_scroll="1">
		<text align="r" x="-181" y="-35" font="graffiti22" color="inv_items">st_items</text>
		<texture/>
	</others_bag_static>

	<!-- Сетка рюкзака ГГ -->
	<dragdrop_list_our x="0" y="0" width="496" height="600"
			cell_width="40" cell_height="40" rows_num="16" cols_num="12"
			unlimited="1" group_similar="1" condition_progress_bar="1"/>

	<!-- Сетка рюкзака НПС/тайника -->
	<dragdrop_list_other x="0" y="0" width="496" height="600"
			cell_width="40" cell_height="40" rows_num="16" cols_num="12"
			unlimited="1" group_similar="1" condition_progress_bar="1"/>

	<!-- Характеристики ГГ -->
	<actor_chars>
		<!-- репутация -->
		<reputation_caption x="521" y="75" width="153" height="15">
			<text align="l" font="letterica16" color="inv_rel_caption"/>
		</reputation_caption>
		<reputation_static x="680" y="75" width="153" height="15">
			<text align="r" font="letterica16" color="inv_rel_text"/>
		</reputation_static>
	</actor_chars>

	<!-- Деньги -->
    <money_static x="703" y="97" width="128" height="20">
		<text align="r" font="graffiti22" color="inv_money" complex_mode="0"/>
    </money_static>

	<!-- Единица массы -->
	<auto_static x="994" y="741" width="220" height="30">
		<text font="letterica16" color="inv_kg">st_ui_kg</text>
	</auto_static>

	<frame_window/>
    <descr_static/>

	<!-- Взять все -->
	<take_all_btn x="265" y="738" width="240" height="24" accel="kX" highlight_text="1">
        <texture>ui_big_inventory_button</texture>
		<sound_t>interface\inv_take</sound_t>
        <text font="graffiti22" color="grey_5" align="c">ui_st_take_all</text>
		<text_color>
			<e color="white_1"/>
			<t color="grey_2"/>
			<d color="grey_2"/>
			<h color="black_1"/>
		</text_color>
	</take_all_btn>

	<!-- Выход -->
    <exit_button x="517" y="738" width="240" height="24" highlight_text="1">
        <texture>ui_big_inventory_button</texture>
        <text font="graffiti22" color="grey_5" align="c">ui_inv_exit</text>
		<text_color>
			<e color="white_1"/>
			<t color="grey_2"/>
			<d color="grey_2"/>
			<h color="black_1"/>
		</text_color>
    </exit_button>

	<!-- Звуки действий при обыске -->
	<action_sounds>
		<snd_open>interface\inv_open_body</snd_open>
		<snd_close>interface\inv_close_body</snd_close>
		<snd_properties>interface\inv_properties</snd_properties>
		<snd_drop_item>interface\inv_drop</snd_drop_item>
		<snd_attach_addon>interface\inv_attach_addon</snd_attach_addon>
		<snd_detach_addon>interface\inv_detach_addon</snd_detach_addon>
		<snd_item_use>interface\inv_slot</snd_item_use>
	</action_sounds>
</window>